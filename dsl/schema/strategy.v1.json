{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "dsl-strategy-v1",
  "title": "DSL Strategy Descriptor",
  "description": "Strategy descriptor: config (owner-set) + runtime (DSL-updated)",
  "type": "object",
  "properties": {
    "strategyKey": { "type": "string" },
    "displayName": { "type": "string" },
    "schemaVersion": { "const": 1 },
    "owner": {
      "type": "object",
      "properties": { "skill": { "type": "string" }, "ref": { "type": "string" } }
    },
    "active": { "type": "boolean" },
    "createdAt": { "type": "string", "format": "date-time" },
    "config": {
      "type": "object",
      "properties": {
        "maxPositions": { "type": "integer" },
        "model": { "type": "object" },
        "cron": { "type": "object" },
        "state": { "type": "object" },
        "execution": { "type": "object" }
      }
    },
    "runtime": {
      "type": "object",
      "properties": {
        "activePositions": { "type": "integer" },
        "slotsAvailable": { "type": "integer" },
        "totalUnrealizedROE": { "type": "number" },
        "lastRunAt": { "type": "string" },
        "lastRunStatus": { "type": "string" },
        "consecutiveErrors": { "type": "integer" }
      }
    }
  }
}
